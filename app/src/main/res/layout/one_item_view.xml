<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/second_gradient_color">

        <ImageView
            style="@style/homeCardImage"
            android:layout_gravity="center_vertical"
            android:paddingStart="5dp"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/free_icon_font_heart_3916580_48"
            app:tint="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/habitTitle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Title"
                android:textColor="@color/primaryTextColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/habitDescription"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Description"
                android:textColor="@color/primaryTextColor"
                android:textSize="20sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:textStyle="bold"
                android:maxLines="1"
                android:text="@string/start"
                android:textColor="@color/secondaryTextColor" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/habitStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="13/05/2022"
                android:textColor="@color/secondaryTextColor" />

            <TextView
                android:id="@+id/finish"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/finish"
                android:textColor="@color/secondaryTextColor" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/habitFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="17/05/2023"
                android:textColor="@color/secondaryTextColor" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>